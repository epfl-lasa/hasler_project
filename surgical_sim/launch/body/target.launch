<launch>
  <arg name="model" default="$(find surgical_sim)/models/urdf/target_object/target_object.urdf.xacro" />
  <arg name="targetName" default="t1"/>
  <arg name="gazebo_gui" default="false" />
  <arg name="id" default="right" />
  <arg name="rviz" default="false"/>
  <arg name="virtual_target" default="true"/>
  <arg name="spawn_delay" default="0"/>

  <arg name="pos.x" default="0.0"/>
  <arg name="pos.y" default="0.5"/>
  <arg name="pos.z" default="1.23"/>
  <arg name="freq" default="300.0"/>  

   

  <group ns="$(arg id)_$(arg targetName)_target">
    <param name="robot_description" command="rosrun xacro xacro --inorder $(arg model) targetID:=$(arg id)_$(arg targetName)"/>
    <node pkg="robot_state_publisher" type="robot_state_publisher"  name="target_object_state_publisher">
      <param name="publish_frequency" type="double" value="$(eval 2*arg('freq'))" />
    </node>
  </group>


  <group if="$(arg virtual_target)">
    <node pkg="tf2_ros" type="static_transform_publisher" name="baseObject_static_tf" args="0 0.5 1.0 0 0 0 world $(arg id)_$(arg targetName)_target_base_link" />
  </group> 

  <group if="$(arg rviz)">
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find surgical_sim)/rviz/target_object_view.rviz" />
  </group>

  <include file="$(find surgical_sim)/launch/robot.gazebo.launch">
      <arg name="gui" value="$(arg gazebo_gui)"/>
      <arg name="gazeboBringUp" value="$(arg rviz)"/>  
  </include> 

  <node name="spawn_$(arg id)_$(arg targetName)_target" pkg="gazebo_ros" type="spawn_model" launch-prefix="bash -c 'sleep $(arg spawn_delay); $0 $@'" 
        args="-urdf -x $(arg pos.x) -y $(arg pos.y) -z $(arg pos.z) -model $(arg id)_$(arg targetName)_target -param $(arg id)_$(arg targetName)_target/robot_description " respawn="false" output="screen" />

</launch>

