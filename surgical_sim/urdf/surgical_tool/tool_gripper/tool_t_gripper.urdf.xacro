<?xml version="1.0" encoding="utf-8"?>
<robot name="surgical_tool" xmlns:xacro="http://www.ros.org/wiki/xacro">


  <!-- gripper  -->
  <xacro:macro name="create_gripper">
    
    <!-- joint 5: Outer wrist pitch joint -->
    <joint name="outer_wrist_pitch" type="revolute">
      <parent link="tool_wrist_shaft_link"/>
      <child link="tool_wrist_gripper_link"/>
      <axis xyz="0 0 1"/>
      <origin rpy="-1.5708 -1.5708 0" xyz="0 0 0"/>
      <limit lower="-1.5707" upper="1.5707" velocity=".4" effort="1000"/>
    </joint>

    <!-- link 5: tool_wrist_gripper_link -->
    <link name="tool_wrist_gripper_link">
      <visual>
        <!-- <origin rpy="0 3.1416 0" xyz="0 0 0"/> -->
        <origin rpy="1.5708 3.1416 0" xyz="0.0051 0.0032 0"/>
        <geometry>
          <mesh filename="package://surgical_sim/model/meshes/dae/tool_wrist_gripper_link.dae"/> 
        </geometry>
      </visual>
    </link>

    <!-- joint 6: Outer wrist yaw joint -->
    <joint name="outer_wrist_yaw" type="revolute">
      <parent link="tool_wrist_gripper_link"/>
      <child link="tool_wrist_gripper_shaft_link"/>
      <axis xyz="0 0 1"/>
      <origin rpy="-1.5708 -1.5708 0" xyz="0.0091 0 0"/>
      <!-- +/- 80 deg -->
      <limit lower="-1.3963" upper="1.3963" velocity=".4" effort="1000"/>
    </joint>

    <!-- link 6: tool_wrist_gripper_shaft_link -->
    <link name="tool_wrist_gripper_shaft_link">
      <visual>
        <origin rpy="0 0 0" xyz="0 -0.0002 -0.0025"/>
        <geometry>
          <mesh filename="package://surgical_sim/model/meshes/dae/tool_wrist_gripper_shaft_link.dae"/> 
        </geometry>
      </visual>
    </link>
    
    <!-- joint 7-1: Outer open angle 1  -->
    <joint name="outer_wrist_open_angle" type="revolute">
      <parent link="tool_wrist_gripper_shaft_link"/>
      <child link="tool_wrist_gripper_ee_link_1"/>
      <axis xyz="0 0 1"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <limit lower="0" upper="1.5707" velocity=".4" effort="1000"/>
    </joint>

    <!-- link 7-1: Outer open angle link 1 -->
    <link name="tool_wrist_gripper_ee_link_1">
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://surgical_sim/model/meshes/dae/tool_wrist_gripper_link_2.dae"/>
        </geometry>
      </visual>
    </link>

    <!-- joint 7-2: Outer open angle 2   -->
    <joint name="outer_wrist_open_angle_mimic" type="revolute">
      <parent link="tool_wrist_gripper_shaft_link"/>
      <child link="tool_wrist_gripper_ee_link_2"/>
      <axis xyz="0 0 1"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <limit lower="-1.5707" upper="1.5707" velocity=".4" effort="1000"/>
      <mimic joint="outer_wrist_open_angle" multiplier="-1"/>
    </joint>

    <!-- link 7-2: Outer open angle link 2 -->
    <link name="tool_wrist_gripper_ee_link_2">
      <visual>
        <origin rpy="0 3.1516 0" xyz="0 0 0"/>
        <geometry>
          <mesh filename="package://surgical_sim/model/meshes/dae/tool_wrist_gripper_link_2.dae"/>
        </geometry>
      </visual>
    </link>

    <!-- tool tip -->
    <joint name="tool_tip_" type="fixed">
      <parent link="tool_wrist_gripper_shaft_link"/>
      <child link="tool_tip_link"/>
      <origin rpy="0 ${pi/2} ${pi/2}" xyz="0 0.0102 0"/>
    </joint>
    <link name="tool_tip_link"/>
    
  </xacro:macro>
  
</robot>
