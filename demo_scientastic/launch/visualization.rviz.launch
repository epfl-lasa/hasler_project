<launch>
	
	<arg name="chaser_init_pose" default="-x 0.0 -y 0.0 -z 2.1 -qx 0.0 -qy 0.0 -qy 0.0 -qz 1.0"/>
	<arg name="target_init_pose" default="-x 1.0 -y 2.0 -z 0.5 -qx 0.0 -qy 0.0 -qy 0.0 -qz 1.0"/>
	<!-- <node name="worldChaserTransform" pkg="foot_control_xy" type="worldActorTransform" args="chaser $(arg chaser_init_pose)"/> -->
	<!-- <node name="worldTargetransform" pkg="foot_control_xy" type="worldActorTransform" args="target $(arg target_init_pose)"/> -->
	<arg name="scale.t" default="0.3"/>
	<arg name="scale.c" default="0.9"/>
	<arg name="enableGazebo" default="true"/>
	<arg name="enableJoystick" default="true"/>

	<group ns="left_foot">
		<arg name="model" default="$(find demo_scientastic)/models/h_lower_limb/urdf/h_lower_limb.urdf.xacro"/> 
		<param name="robot_description" command="$(find xacro)/xacro $(arg model) scale:=$(arg scale.c) link_name:=left_foot --xacro-ns --inorder  " />

	</group>

	<group ns="right_foot">
		<arg name="model" default="$(find demo_scientastic)/models/h_lower_limb/urdf/h_lower_limb.urdf.xacro"/> 
		<param name="robot_description" command="$(find xacro)/xacro $(arg model) scale:=$(arg scale.c) link_name:=right_foot --xacro-ns --inorder  " />

	</group>


	<param name="use_gui" value="1"/>	
	
	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find demo_scientastic)/rviz/urdf.rviz" required="true"/>
	
	<group if="$(arg enableJoystick)">
		<include file="$(find demo_scientastic)/launch/includes/joystick.launch.xml"/>
	</group>
	
	<group if="$(arg enableGazebo)">
		<include file="$(find demo_scientastic)/launch/gazebo.launch">
			<arg name="standalone" value="true"/>
			<arg name="scale.t" value="$(arg scale.t)"/>
			<arg name="scale.c" value="$(arg scale.c)"/>
		</include>
	</group>
</launch>
